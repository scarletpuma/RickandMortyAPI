{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">
    <article>
      <h2>
        {{ character.name }}
      </h2>
      <h3>
        {{ character.status }}
        -
        {{ character.species}}
      </h3>
      <h6>Last known location:
        {{ character.location }}
      </h6>
      <h6>Originally from:
        {{ character.origin }}
      </h6>
      {% if character.owner == userId %}
        <div class="btn-group">

          <a href="/characters/{{ character.id }}/edit" class="btn btn-primary">Edit</a>
          <form action="/characters/{{ character.id }}?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn btn-danger">
          </form>
        </div>
      {% endif %}
      </article>
    <hr>
    <h4>comments</h4>
    <hr>
    {% if loggedIn %}
      <div class="col-md-6">
        <form action="/comments/{{character.id}}" method="POST">
          <fieldset>
            <legend>Add Comment</legend>
            <label class="form-label">comment:</label>
            <input class="form-control mb-1" type="text" placeholder="enter your comment..." name="note" required>
          </fieldset>
          <input class="btn btn-success" type="submit" value="add comment">
        </form>
      </div>
    {% else %}
      <div class="col-md-6">
        <small>If you'd like to leave a comment, please log in...</small>
      </div>
    {% endif %}
    <hr>
    {% if character.comments.length > 0%}
      <div class="container-sm justify-content-center">
        <div class="col-md-8 col-lg-6">
          {% for comment in character.comments %}
            {% render '../comment.liquid', comment: comment, userId: userId, character: character %}
          {% endfor %}
        </div>
      </div>
    {% else %}
      <small>no comments yet...</small>
    {% endif %}
  </div>
{% endblock %}}
    </article>
  </div>
{% endblock %}}
